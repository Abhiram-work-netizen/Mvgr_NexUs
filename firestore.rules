rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }
    
    function isOverallAdmin() {
      return isSignedIn() && getUserRole() == 'overallAdmin';
    }
    
    function isCommunityAdmin() {
      return isSignedIn() && getUserRole() == 'communityAdmin';
    }
    
    function canManageClub(clubId) {
      return isOverallAdmin() || 
        (isCommunityAdmin() && clubId in get(/databases/$(database)/documents/users/$(request.auth.uid)).data.managedClubIds);
    }

    // --- Users ---
    match /users/{userId} {
      allow read: if isSignedIn();
      allow write: if request.auth.uid == userId || isOverallAdmin();
    }

    // --- Clubs ---
    match /clubs/{clubId} {
      // Anyone can read clubs
      allow read: if true;
      
      // Only Overall Admin can create/delete clubs
      allow create, delete: if isOverallAdmin();
      
      // Community Admin can update their assigned clubs, Overall Admin can update all
      allow update: if canManageClub(clubId);
      
      // --- Members Subcollection ---
      match /members/{memberId} {
        allow read: if isSignedIn();
        
        // User can request to join (create their own doc with pending status)
        allow create: if isSignedIn() && request.auth.uid == memberId && request.resource.data.status == 'pending';
        
        // User can leave (delete their own doc)
        allow delete: if isSignedIn() && request.auth.uid == memberId;
        
        // Admin can approve/reject members
        allow update, delete: if canManageClub(clubId);
      }
      
      // --- Posts Subcollection ---
      match /posts/{postId} {
        allow read: if true;
        allow create, update, delete: if canManageClub(clubId);
      }
    }

    // --- Events ---
    match /events/{eventId} {
      allow read: if true;
      allow create: if isSignedIn() && getUserRole() != 'student';
      allow update, delete: if isOverallAdmin();
    }
  }
}
